<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@color/black</item>

        <item name="fontPath">fonts/Rubik-Light.ttf</item>
        <item name="drawerArrowStyle">@style/DrawerIconStyle</item>
        <item name="android:windowBackground">@color/white</item>

        <item name="android:tabWidgetStyle">@style/CustomTabWidgetText</item>
    </style>

    <style name="DrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
        <item name="spinBars">true</item>
    </style>

    <style name="CustomTabWidgetText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">@dimen/text_default</item>
    </style>



    <style name="ToolbarTheme" parent="AppTheme">
        <item name="fontPath">fonts/Rubik-Light.ttf</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="textColorAlertDialogListItem">@color/black</item>
        <item name="android:textColorAlertDialogListItem">@color/black</item>
    </style>

    <style name="TextBold" parent="android:Widget.TextView">
        <item name="fontPath">fonts/Rubik-Medium.ttf</item>
    </style>

    <style name="TextRegular" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/spacing_sm</item>
        <item name="fontPath">fonts/Rubik-Light.ttf</item>
    </style>

    <style name="TextMedium" parent="android:Widget.TextView">
        <item name="fontPath">fonts/Rubik-Medium.ttf</item>
    </style>

    <style name="TittleCollapsingToolbar" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
